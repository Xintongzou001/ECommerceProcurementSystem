@{
    ViewData["Title"] = "Data Exploration";
}

<h1>Data Exploration</h1>

<div class="mb-4">
    <p class="lead">Explore annual sales trends from the data collected via the Socrata API. The chart below is interactive and updates as new data is added.</p>
</div>

<div class="card mb-4">
    <div class="card-body">
        <canvas id="annualSalesChart" style="max-width:100%; height:400px;"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            fetch('/Home/GetAnnualSalesData')
                .then(response => response.json())
                .then(data => {
                    const years = data.map(x => x.year || x.Year);
                    const sales = data.map(x => x.totalSales || x.TotalSales);
                    const ctx = document.getElementById('annualSalesChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: years,
                            datasets: [{
                                label: 'Total Sales',
                                data: sales,
                                backgroundColor: 'rgba(13, 110, 253, 0.7)',
                                borderColor: 'rgba(13, 110, 253, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: { display: false },
                                title: {
                                    display: true,
                                    text: 'Annual Sales by Year',
                                    font: { size: 18 }
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    title: { display: true, text: 'Total Sales ($)' }
                                },
                                x: {
                                    title: { display: true, text: 'Year' }
                                }
                            }
                        }
                    });
                });
        });
    </script>
}